/* commpnents/loading/loading.wxss */
.main {
  width: 100%;
  height: 100%;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
}
.main image {
  width: 280rpx;
  height: 220rpx;
  opacity: 0.6;
  position: relative;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 20rpx;
}