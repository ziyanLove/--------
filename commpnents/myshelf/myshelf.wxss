/* components/bookslist/bookslist.wxss */


.item {
  height: 250rpx;
  width: 98%;
  display: flex;
  align-items: center;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  border-top: 1rpx solid #eee;
  margin: 0 auto;
}

.item .itemimage {
  width: 140rpx;
  height: 190rpx;
  border-radius: 12rpx;
}

.item .middle {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.item .middle .name {
  width: 200px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.item .middle .smalltext {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 500rpx;
}

.item .middle .smalltext,
.desc {
  font-size: 22rpx;
  color: gray;
  margin-bottom: 10rpx;
}

.item .middle .circle {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background-color: red;
  border-radius: 50%;
  vertical-align: middle;
  margin-left: 8rpx;
}

