.tab1 {
  margin-top: 30rpx;
  margin-left: 10rpx;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.tab2 {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.tab2 .book_suggest {
  margin-top: 18rpx;
  width: 150rpx;
  height: 260rpx;
  text-align: center;
  font-size: 32rpx;
}

.tab2 .book_suggest .image_0 {
  width: 120rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.tab2 .book_suggest .bookname {
  width: 135rpx;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}