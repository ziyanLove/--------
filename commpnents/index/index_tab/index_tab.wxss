/* tab */
.tabbox {
  margin-top: 40rpx;
  width: 100%;
  height: 700rpx;
  background: #fff;
  border: 2rpx solid #fff;
  border-radius: 20rpx;
}

.hd {
  padding-top: 20rpx;
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.hd_flex {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.hd_flex_on {
  font-size: 35rpx;
  font-weight: 600;
  color: #000000;
  position: relative;
  transition: all 0.5s;
}
.wd {
  width: 60%;
  margin: 0 auto;
  border-bottom: 12rpx solid #ff8902;
  border-radius: 10rpx 10rpx 0 0 ;
  transition: all 0.5s;
}
