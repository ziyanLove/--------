/* 搜索栏 */

/* 搜索栏 */
.seachBox {
  display: flex;
  margin: 0 auto;
  border: 1px solid #fff;
  background-color: #fff;
  border-radius: 60rpx;
  height: 80rpx;
  padding: 2rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.seachBox .search_image {
  width: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.searchbook {
  width: 520rpx;
  height: 65rpx;
  padding-left: 16rpx;
  padding-bottom: 2rpx;
  font-size: 32rpx;
}

/* 轮播图栏 */
.carouselbox {
  margin-top: 40rpx;
  width: 100%;
  transform: translateY(0);
}

.swipershu {
  width: 100%;
  height: 280rpx;
  line-height: 30rpx;
}

.swiperbook {
  width: 100%;
  height: 260rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

image.active {
  transform: scale(1);
  transition: all 0.2s ease-in 0s;
  border-radius: 8rpx;
}

image.quiet {
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
}