<navigation defaultSetting="{{navigationSetting}}">
  <image slot="return" src="/icon/返回.png" style="width: 20px; height: 20px; margin-left: 12px;" bindtap="reindex" />
  <view slot="placeholder" style="width: 20px;height: 20px; margin-right: 12px;">
  </view>
</navigation>
<!-- feedback.wxml -->
<view class="main">
  <view class="con">
    <view class="container">
      <form class="form" bindsubmit="submitFeedback" bindreset="formReset">
        <view class="vvr">您想要添加的书籍</view>
        <input placeholder="请输入书名" value="{{bookname}}" name="bookname" />
        <input placeholder="请输入作者" value="{{author}}" name="author" />
        <view class="vvr">您的建议</view>
        <textarea placeholder="欢迎您提出任何意见或建议，我们将非常重视，谢谢您！" name="message"/>
        <button form-type="submit" style="margin-top: 5%;">提交</button>
      </form>
    </view>
  </view>
</view>