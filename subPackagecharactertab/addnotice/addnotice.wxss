/* subPackagecharactertab/addnotice/addnotice.wxss */
.main {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  width: 85%;
}
.biaoqian {
  background-color: #fff;
  height: 65rpx;
  padding: 10rpx;
  margin-bottom: 8rpx;
}
.biaoqian text {
  padding-left: 15rpx;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #f8f8f8;
}
.drawer_content {
  padding: 20rpx 40rpx;
  height: 470rpx;
  overflow-y: scroll;
}
.drawer_title{
  padding:20rpx;
  font:42rpx "microsoft yahei";
  text-align: center;
}
.line{
  border-bottom: 1px solid #f8f8f8;
}
.iptd {
  height: 100rpx;
  width: 620rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  background-color: #fff;
  padding-left: 1em;
  margin: 0 auto;
}
.btnd {
  margin-top: 40rpx;
  background-color: #ff814c;
  border-radius: 40rpx;
  color: #fff;
}