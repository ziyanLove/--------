/* subPackagecharactertab/characterrelationship/characterrelationship.wxss */
.main {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  width: 85%;
}
.renwu {
  display: flex;
  justify-content: center;
}
.zhuyaorenwu {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #fff;
  font-size: 50rpx;
  font-weight: 600;
}
.guanxi {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  margin-bottom: 5%;
  border-radius: 20rpx;
  padding-top: 2%;
}
.bianhao {
  padding-left: 20rpx;
}
.btns {
  position: fixed;
  left: 50%;
  bottom: 0;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #f8f8f8;
}
.drawer_content {
  padding: 20rpx 40rpx;
  height: 600rpx;
  overflow-y: scroll;
}
.drawer_title{
  padding:20rpx;
  font:42rpx "microsoft yahei";
  text-align: center;
}
.line{
  border-bottom: 1px solid #f8f8f8;
}
.iptd {
  height: 100rpx;
  width: 620rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  background-color: #fff;
  padding-left: 1em;
  margin: 0 auto;
}
.btnd {
  margin-top: 40rpx;
  background-color: #ff814c;
  border-radius: 40rpx;
  color: #fff;
}
