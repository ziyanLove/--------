/* subPackagemymessage/bookshelfmanagement/bookshelfmanagement.wxss */
.item {
  height: 110px;
  width: 96%;
  display: flex;
  align-items: center;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  border-top: 1rpx solid #eee;
}

.item .itemimage {
  width: 130rpx;
  height: 170rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.item .middle {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.item .middle .name {
  width: 200px;
  font-weight: 550;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.item .middle .smalltext {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 500rpx;
}

.item .middle .smalltext,
.desc {
  font-size: 24rpx;
  color: gray;
  margin-bottom: 10rpx;
  width: 500rpx;
  /* 强制在一行内显示 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.top {
  width: 100%;
  height: 3vh;
  line-height: 2vh;
  background-color: #eeeeee;
  display: flex;
  justify-content: center;
  position: fixed;
  z-index: 9999;
  top: 10vh;
}

.zongshu {
  font-size: 30rpx;
}

.containe {
  padding: 0 30rpx;
  padding-bottom: 160rpx;
}

.list {
  padding-top: 30rpx;
  width: 95%;
  margin: 0 auto;
  margin-left: 10rpx;
  background-color: #fff;
  padding-left: 20rpx;
}

.check-box .wx-checkbox-input {
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
}

.item .itemimage {
  width: 130rpx;
  height: 170rpx;
}

.item .middle .smalltext {
  width: 360rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.check-box .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ff4535;
  color: #ffffff;
}

.bottom {
  width: 99%;
  height: 200rpx;
  /* background-color: red; */
  position: fixed;
  bottom: 0;
  left: 2rpx;
}

.count {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  line-height: 100rpx;
  align-items: center;
  background-color: #ececec;
}

.xuanze {
  font-size: 32rpx;
  margin-right: 30%;
}

.yixuan {
  font-size: 30rpx;
}

.countcolor {
  color: #bd3124;
}

.removebooks {
  display: flex;
  justify-content: center;
  width: 100%;
  background-color: #f4f4f4;
  margin-left: 6rpx;
  color: #bbbbbb;
  position: absolute;
  bottom: 0;
}

.removebooks button {
  background-color: #ffffff;
  font-size: 28rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 12rpx;
}

.removebooks button image {
  width: 50rpx;
  height: 80rpx;
}
.removebooks button text {
  padding-top: 8rpx;
  font-weight: 400;
  font-size: 30rpx;
}
.list .item .addbook {
  width: 130rpx;
  height: 170rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list .item .addbook text {
  color: #d1d1d1;
  font-size: 15px;
}

.item .right {
  position: absolute;
  right: 50rpx;
}

.zhezhao {
  position: relative;
  background-color: #fff;
  width: 100%;
  height:  100%;
  opacity: 0.7;
}