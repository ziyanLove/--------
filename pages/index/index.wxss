/* 主 */
.main {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  width: 85%;
}

/* 个性化推荐面板栏 */
.personalized_recommendation {
  margin-top: 60rpx;
  width: 100%;
  height: 100%;
}

.personalized_name {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 50rpx;
  margin: 20rpx auto;
  width: 70%;
  border-bottom: 2rpx #eee solid;
}

.personalized_name .text_1 {
  width: 260rpx;
  padding-bottom: 20rpx;
}

.personalized_name .image_1 {
  padding-top: 14rpx;
  width: 50rpx;
  height: 50rpx;
  padding-bottom: 20rpx;
}

.scroll-view-item {
  height: 100%;
  height: 220rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.Personalized_book {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 220rpx;
  padding: 4rpx;
  background-color: #fff;
  border: 2rpx solid #fff;
  border-radius: 18rpx;
}

.Personalized_book .image_2 {
  margin-top: 35rpx;
  width: 125rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.Personalized_book .bookname {
  width: 450rpx;
  font-weight: 600;
  margin-top: 10rpx;
  padding-left: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.Personalized_book .bookblub {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
  margin-top: -16rpx;
  padding-top: -16rpx;
  padding-left: 12rpx;
  width: 448rpx;
  height: 80rpx;
  white-space: normal;
  font-size: 25rpx;
  color: rgb(156, 156, 156);
}

.bookauthor {
  display: inline-block;
  font-weight: 500;
  margin-top: -12rpx;
  padding-top: -16rpx;
  padding-left: 12rpx;
  white-space: normal;
  font-size: 25rpx;
  max-width: 190rpx;
  color: rgb(156, 156, 156);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bookspecial {
  display: inline-block;
  font-weight: 500;
  margin-top: -5rpx;
  padding-top: 16rpx;
  padding-left: 12rpx;
  white-space: normal;
  font-size: 25rpx;
  color: rgb(156, 156, 156);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bookchapter {
  display: inline-block;
  font-weight: 500;
  margin-top: -5rpx;
  padding-top: 16rpx;
  padding-left: 12rpx;
  white-space: normal;
  font-size: 25rpx;
  color: rgb(156, 156, 156);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* commpnents/index/index_login/index_login.wxss */
.login_main {
  display: flex;
  width: 90%;
  height: 90rpx;
  background: linear-gradient(to right,#fc4851, #ff824b);
  border-radius: 50rpx;
  position: fixed;
  z-index: 9999;
  left: 50%;
  transform: translate(-50%,0);
  bottom: 1.5%;
}

.login_text {
  width: 320rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 1%;
  font-size: 32rpx;
  color: #f1b5aa;
}

.login_button {
  position: relative;
  top: 50%;
  transform: translate(0,-50%);
  background-color: #fee490;
  width: 150rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  height: 60rpx;
  border-radius: 50rpx;
  text-align: center;
  color: #a18223;
  margin-left: 3%;
}